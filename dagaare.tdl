  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.PNG.GEND inan ].

koɔraa-noun-lex := cn-lex-noun-lex &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.PNG.GEND an ].

gane-noun-lex := cn-lex-noun-lex &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.PNG.GEND inan ].

